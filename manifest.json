{
    "manifest_version": 3,
    "name": "Prompt Switcher Connect",
    "version": "2.0",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": [
      "https://api.openai.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
        "https://chatgpt.com/*", 
        "https://gemini.google.com/*",
        "https://claude.ai/*" 
      ],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
      {
        "resources": ["js-lib/default_prompts.json"],
        "matches": ["<all_urls>"]
      }
    ]
  }